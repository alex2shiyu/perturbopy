&perturbo
  prefix        = 'gaas'
  calc_mode     = 'dynamics-pp'
  
  boltz_kdim(1) = 80
  boltz_kdim(2) = 80
  boltz_kdim(3) = 80

  boltz_emin    =  9.5   ! VBM = 9.26 eV
  boltz_emax    = 10.2   ! CBM = 9.71 

  ! 7, 8 valence bands
  ! 9,10 conduction bands
  band_min      = 9
  band_max      = 10

  tmp_dir       = './tmp'

  boltz_nstep   = 50
  time_step     = 1
  output_nstep  = 2
  solver        = 'euler'

  boltz_init_dist = 'gaussian'
  boltz_init_e0 = 10.0    ! eV
  boltz_init_smear = 40.0 ! meV

  delta_smear   = 8
  phfreq_cutoff = 2

  ftemper = 'gaas.temper'
 /
